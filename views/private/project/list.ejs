<section id="inner-headline">
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <ul class="breadcrumb">
        <li><a href="/admin"><i class="fa fa-home"> Admin</i></a><i class="icon-angle-right"></i></li>
        <li><a href="/admin/project/list">Proyecto</a><i class="icon-angle-right"></i></li>
        <li class="active">Lista</li>
      </ul>
    </div>
  </div>
</div>
</section>
<section id="content">
<div class="container">

<div class="row">
  <a href="/admin/project/create" class="btn btn-primary"><i class="glyphicon glyphicon-plus
"></i> <% __('create') %></a>
  <br><br>
  <div class="col-lg-12">
    <table class="table table-striped table-hover ">
      <thead>
        <tr>
          <th>#</th>
          <th>Title</th>
          <th>Asesor</th>
          <th>Program</th>
          <th>Period</th>
          <th>Author</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=0; i<project.length; i++) { %>
              <tr>
                  <td class="highlight">
                      <div class="success"></div>
                      <a href="/admin/project/edit?id=<%= project[i].id %>"><%= project[i].id %> </a>
                  </td>
                  <td><a href="/admin/project/edit?id=<%= project[i].id %>"><%= project[i].title %> </a></td>
                  <td><%= project[i].asesor %></td>
                  <td><%= project[i].program %></td>
                  <td><%= project[i].period %></td>
                  <td><%= project[i].author1 %> / <%= project[i].author2 %> / <%= project[i].author3 %>  </td>
                  <td>
                    <a href="/project/delete?id=<%= project[i].id%>" class="btn btn-theme"><i class="glyphicon glyphicon-trash
                  "></i> Delete</a>
                  </td>
              <tr>
          <% } %>
      </tbody>
    </table>
    </div>
  </div>
</div>
</div>
<!-- Modal -->

<% if(count>0) { %>
  <nav>
    <div class="row">
      <div class="col-md-4 col-md-offset-5">
          <div id="pagination">
            <ul class="pager">
          	 <span class="all">Page <%=page%> of <%=Math.round(count/5)%></span>
          	 <span class="current"><%=page%></span>
             <% if(page>1) {%>
               <a href="/admin/project/list?p=<%=page-1%>">Anterior</a>
             <% } %>
             <% if(count > (page*5)) {%>
          	    <a href="/admin/project/list?p=<%=parseInt(page)+1%>">Siguiente</a>
              <% } %>
          </div>
        </div>
      </div>
  </nav>
<% } %>
