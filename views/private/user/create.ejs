<section id="inner-headline">
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <ul class="breadcrumb">
        <li><a href="#"><i class="fa fa-home"></i></a><i class="icon-angle-right"></i></li>
        <li><a href="/admin">Admin</a><i class="icon-angle-right"></i></li>
        <li><a href="/admin/user/list"><% __('user') %></a><i class="icon-angle-right"></i></li>
        <li class="/admin/user/create"><% __('create') %></li>
      </ul>
    </div>
  </div>
</div>
