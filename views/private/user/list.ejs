<section id="inner-headline">
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <ul class="breadcrumb">
        <li><a href="#"><i class="fa fa-home"></i></a><i class="icon-angle-right"></i></li>
        <li><a href="/admin">Admin</a><i class="icon-angle-right"></i></li>
        <li><a href="/admin/user/list">User</a><i class="icon-angle-right"></i></li>
        <li class="active">List</li>
      </ul>
    </div>
  </div>
</div>
</section>
<section id="content">
<div class="container">

<div class="row">
  <a href="/admin/user/create" class="btn btn-primary"><i class="glyphicon glyphicon-plus
"></i> Crear</a>
  <br><br>
  <div class="col-lg-12">
    <table class="table table-striped table-hover ">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Email</th>
          <th>Password</th>
          <th>Type User</th>
          <th>Date</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=0; i<user.length; i++) { %>
              <tr>
                  <td class="highlight">
                      <div class="success"></div>
                      <a href="/admin/user/edit?id=<%= user[i].id %>"><%= user[i].id %> </a>
                  </td>
                  <td><a href="/admin/user/edit?id=<%= user[i].id %>"><%= user[i].name %> </a></td>
                  <td><%= user[i].email %></td>
                  <td><%= user[i].password %></td>
                  <td><%= user[i].typeuser %></td>
                  <td><%= user[i].date.toISOString() %></td>
                  <td>
                    <a href="/user/delete?id=<%= user[i].id%>" class="btn btn-theme"><i class="glyphicon glyphicon-trash
                  "></i> Delete</a>
                  </td>
              <tr>
          <% } %>
      </tbody>
    </table>

  </div>
</div>
</div>
<!-- Modal -->

<% if(count>0) { %>
  <nav>
    <div class="row">
      <div class="col-md-4 col-md-offset-5">
          <div id="pagination">
            <ul class="pager">
          	 <span class="all">Page <%=page%> of <%=Math.round(count/5)%></span>
          	 <span class="current"><%=page%></span>
             <% if(page>1) {%>
               <a href="/admin/user/list?p=<%=page-1%>">Anterior</a>
             <% } %>
             <% if(count > (page*5)) {%>
          	    <a href="/admin/user/list?p=<%=parseInt(page)+1%>">Siguiente</a>
              <% } %>
          </div>
        </div>
      </div>
  </nav>
<% } %>
