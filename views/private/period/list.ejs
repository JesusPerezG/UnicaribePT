<section id="inner-headline">
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <ul class="breadcrumb">
        <li><a href="#"><i class="fa fa-home"></i></a><i class="icon-angle-right"></i></li>
        <li><a href="/admin">Admin</a><i class="icon-angle-right"></i></li>
        <li><a href="/admin/period/list"><%= __('period') %></a><i class="icon-angle-right"></i></li>
        <li class="active"><%= __('list') %></li>
      </ul>
    </div>
  </div>
</div>
</section>
<section id="content">
<div class="container">

<div class="row">
  <a href="/admin/period/create" class="btn btn-primary"><i class="glyphicon glyphicon-plus
"></i> <%= __('create') %></a>
  <br><br>
  <div class="col-lg-12">
    <table class="table table-striped table-hover ">
      <thead>
        <tr>
          <th>#</th>
          <th><%= __('name') %></th>
          <th><%= __('fecha') %></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=0; i<period.length; i++) { %>
              <tr>
                  <td class="highlight">
                      <div class="success"></div>
                      <a href="/admin/period/edit?id=<%= period[i].id %>"><%= period[i].id %> </a>
                  </td>
                  <td><a href="/admin/period/edit?id=<%= period[i].id %>"><%= period[i].name %> </a></td>
                  <td><%= period[i].date.toISOString() %></td>
                  <td>
                    <a href="/period/delete?id=<%= period[i].id%>" class="btn btn-theme"><i class="glyphicon glyphicon-trash
                  "></i> <%= __('delete') %></a>
                  </td>
              <tr>
          <% } %>
      </tbody>
    </table>

  </div>
</div>
</div>
<!-- Modal -->

<% if(count>0) {%>
  <nav>
    <div class="row">
      <div class="col-md-4 col-md-offset-5">
          <div id="pagination">
            <ul class="pager">
          	 <span class="all">Page <%=page%> of <%=Math.round(count/5)%></span>
          	 <span class="current"><%=page%></span>
             <% if(page>1) {%>
               <a href="/admin/period/list?p=<%=page-1%>"><%= __('ant') %></a>
             <% } %>
             <% if(count > (page*5)) {%>
          	    <a href="/admin/period/list?p=<%=parseInt(page)+1%>"><%= __('sig') %></a>
              <% } %>
          </div>
        </div>
      </div>
  </nav>
<% } %>
