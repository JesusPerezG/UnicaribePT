<section id="inner-headline">
<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <ul class="breadcrumb">
        <li><a href="#"><i class="fa fa-home"></i></a><i class="icon-angle-right"></i></li>
        <li><a href="#">Busqueda</a><i class="icon-angle-right"></i></li>
        <li class="active">Index</li>
      </ul>
    </div>
  </div>
</div>
</section>


  <!-- start slider -->
  <div class="container">
      <form role="form" class="register-form" action="/project/search" method="post">
          <div class="col-mod-9 col-md-offset-2">
            <!-- Split button -->
            <div class="col-xs-6 col-sm-4 col-md-4">
              <div class="form-group">
                <input type="text" name="key" id="key" class="form-control input-lg" placeholder="Search..." tabindex="2" required="true">
              </div>
            </div>
            <div class="col-xs-6 col-sm-4 col-md-4">
              <div class="form-group">
                <select class="form-control input-lg" id="type" name="type" required="true">
                    <option value="">Selecciona un tipo</option>
                    <option value="1">Author</option>
                    <option value="2">Title</option>
                    <option value="3">Asesor</option>
                </select>
                <!--input type="text" name="User[last_name]" id="last_name" class="form-control input-lg" placeholder="Last Name" tabindex="2"-->
              </div>
            </div>
            <div class="col-xs-6 col-sm-4 col-md-4">
              <div class="form-group">
                <button type="submit" class="btn btn-success btn-lg" class="form-control input-lg">Search</button>
              </div>
            </div>
        </div>
    </form>

</div>

<% for(var i=0; i<project.length; i++) { %>
  <div class="row ">
    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-default">
            <!-- Default panel contents -->
            <div class="panel-heading"><h4><%= project[i].title %></h4></div>
            <div class="panel-body">
              <ul class="list-group">
                    <li class="list-group-item"><h5>Autor   <span class="glyphicon glyphicon-user"</span></h5> <%= project[i].author1 %> /  <%= project[i].author2 %> / <%= project.author3 %></li>
                    <li class="list-group-item"><h5>Asesor    <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></h5> <%= project[i].asesor %> </li>
                    <li class="list-group-item"><h5>Programa Educativo    <span class="glyphicon glyphicon-book" aria-hidden="true"></span></h5><%= project[i].program %></li>
                    <li class="list-group-item"><%= project[i].date.toISOString() %> </li>
                    <li class="list-group-item"><a href="your link" class="btn btn-primary"><i class="glyphicon glyphicon-download"></i> Reporte</a></li>
              </ul>
          </div>
        </div>
    </div>
  </div>
<% } %>

